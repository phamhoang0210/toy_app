<div class="container">
      
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email</th>
					<th colspan="3">Option</th>
				</tr>
			</thead>
			<%= will_paginate %>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.name%></td>
				<td><%= user.email%></td>
			    <td><%= link_to "Show", user %></td>
			    <td><%= link_to "Edit", edit_user_path(user) %></td> 
			    <% if current_user.admin?  %>
			     <td>
			     <%= link_to 'Delete',{action: :destroy, id: user.id}, method: :delete, data: {confirm: "Are you sure?"} %>
				 </td>
                <% end %>
			</tr>
			<% end %>
		</table>

		<%= link_to "New User", new_user_path %>
		<%= link_to "Microposts", microposts_path %>
</div>